# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        # color_good = '#88b090'
        color_good="#00cc00"
        interval = 2
}

# order += "disk /"
order += "read_file uptime"
order += "read_file dum"
order += "memory"
order += "read_file bat"
order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "tztime local"
order += "read_file brightness"
# order += "load"
# order += "ethernet _first_"

wireless _first_ {
        format_up = "W: (%essid)"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %remaining (%emptytime %percentage)"
        format_percentage = "%.00f%s"
        integer_battery_capacity = true
        format_down = "No battery"
        status_chr = "CHR"
        status_bat = "BAT"
        path = "/sys/class/power_supply/BAT%d/uevent"
        threshold_type = "percentage"
        low_threshold = 24
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used"
        unit = Mi
        decimals = 3
        threshold_degraded = "1G"
        format_degraded = "%available"
}

tztime local {
        format = " %d-%m %a | %I:%M %p "
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

read_file brightness {
        path=/sys/class/backlight/amdgpu_bl1/brightness
        format=" %content %  "
}

read_file bat {
        path=/sys/class/power_supply/BAT1/capacity
        format=" %title: %content"
}

read_file dum {
        path=/home/hellopradeep/.config/i3status/dummy.txt
        format=" %content"
}

read_file uptime {
        path = "/proc/uptime"
        format=" %content"
        color_good="#ffffff"
}

